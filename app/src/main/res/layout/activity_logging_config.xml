<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.xyoye.dandanplay.ui.debug.LoggingConfigViewModel" />

        <variable
            name="viewModel"
            type="com.xyoye.dandanplay.ui.debug.LoggingConfigViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/item_bg_color"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <TextView
                    android:id="@+id/logging_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日志级别选择（占位）"
                    android:textAppearance="?attr/textAppearanceBody1" />

                <Spinner
                    android:id="@+id/logging_level_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:entries="@array/logging_levels_placeholder"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/debug_log_switch_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="调试日志开关（占位）"
                    android:textAppearance="?attr/textAppearanceBody1" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/debug_log_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="启用调试日志文件写入"
                    android:textAppearance="?attr/textAppearanceBody2" />

                <TextView
                    android:id="@+id/module_list_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="模块列表（占位）"
                    android:textAppearance="?attr/textAppearanceBody1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/module_list"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_20"
                    android:padding="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@android:layout/simple_list_item_1" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
