<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        android:icon="@drawable/ic_player_setting_video"
        android:key="player_type"
        android:title="播放器类型" />
    <ListPreference
        android:key="vlc_hardware_acceleration"
        android:summary="禁用：稳定性更高\n解码：可能提升性能\n完全：可能进一步提升性能"
        android:title="硬件加速"
        app:icon="@drawable/ic_player_setting_codec" />
    <ListPreference
        android:key="vlc_audio_output"
        android:summary="更改VLC输出音频的方式"
        android:title="音频输出"
        app:icon="@drawable/ic_player_setting_opensl" />
    <SwitchPreference
        android:key="surface_renders"
        android:summary="使用后视频渲染性能更高"
        android:title="SurfaceView"
        app:icon="@drawable/ic_player_setting_surface" />
</PreferenceScreen>
